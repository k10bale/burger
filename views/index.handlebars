<div class="container">
  <div class= "row">
  <div class="center col-sm-12">
<h1>Eat-Da-Burger!</h1>
<p></p>
</div>
</div>

<div class= "row" id="available">
  <div class= "col-sm-6">
    <br>
<h2>Burgers!</h2>

<ul>
  {{#each burgers}} {{#unless this.devoured}}
  <li>

      {{this.id}}
      {{this.burger_name}}
      
           <form action="/{{this.id}}?_method=PUT" method="POST">
			          <input type="hidden" name="devoured" value="true">
			          <button class="btn-primary" type="submit">Devour It!</button>
			        </form>
     </li>
    {{/unless}} {{/each}}
</ul>
</div>


<div class="col-sm-6" id= "devoured">
  <br>
<h2>Devoured Burgers!</h2>


  {{#each burgers}} {{#if this.devoured}}
     <li>
  {{this.id}} 
  {{this.burger_name}}
    </li>
    {{/if}} {{/each}}

</div>
</div>

<div class="row">
  <div class="col-sm-6">
<h2>Add a Burger</h2>
<form class="create-update-form" action= "/" method="POST">

  <div class="form-group">
    <label for="burger">Burger:</label>
    <input type="text" id="ca" name="burger_name">
  </div>


  <button class="btn-primary" type="submit">Add Burger</button>
</form>
</div>
</div>
</div>